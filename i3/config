bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer set Master 3%+ unmute && pkill -RTMIN+10 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer set Master 3%- unmute && pkill -RTMIN+10 i3blocks"
bindsym XF86AudioMute exec --no-startup-id "amixer set Master toggle && pkill -RTMIN+10 i3blocks"
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 15
