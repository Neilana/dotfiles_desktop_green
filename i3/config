# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change conHtainer layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# scrot of full screen
bindsym --release Print exec --no-startup-id scrot -e 'mv $f ~/Dropbox/Screenshots'

# scrot of selected area
bindsym --release $mod+Print exec --no-startup-id scrot -s -e 'mv $f ~/Dropbox/Screenshots'

